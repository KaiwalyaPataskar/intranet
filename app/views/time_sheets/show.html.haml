= form_tag time_sheet_path, method: 'GET', class: 'form form-inline' do
  .search-form
    %label From Date:
    =text_field_tag :from_date, params[:from_date], class: "form-control datepicker", placeholder: "From Date", value: @from_date
    %label To Date:
    =text_field_tag :to_date, params[:to_date], class: "form-control datepicker", placeholder: "To Date", value: @to_date
    = submit_tag "Search", class: "btn btn-primary"


%h1 #{@user.name} 
%span{class: "text-height"} (Total Time : #{@total_work_and_leaves['total_work']} Leaves: #{@total_work_and_leaves['leaves']})
.form-horizontal
  -@individual_timesheet_report.each do |key, value|
    %h2 #{key}
    %table.table
      %th Date
      %th From time
      %th To time
      %th Total Work(in hours)
      %th Description
      %descripton
      %tbody
        -value["daily_status"].each do |ds|
          %tr
            -ds.each do |record|
              %td= record
        -total_worked_hours = value["total_worked_hours"]
    %h5 Time on #{key} #{total_worked_hours}
    %br